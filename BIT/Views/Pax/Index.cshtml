@model List<BIT.Data.Entities.Pax>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary text-white">
                PaxList
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Pax" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Pax
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped text-white">
        <thead>
        <tr>
            <th>Pax Name</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td style="color:white">@obj.Name</td>
                
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Pax" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil"></i> Edit
                        </a>

                        <a asp-controller="Pax" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
